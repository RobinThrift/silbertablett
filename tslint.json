{
    "extends": "tslint-microsoft-contrib",
    "lintOptions": {
        "typeCheck": true
    },
    "exclude": [
        "node_modules",
        "build"
    ],
    "rules": {
        "no-suspicious-comment": false,
        "missing-jsdoc": false,
        "semicolon": false,
        "ordered-imports": false,
        "no-relative-imports": false,
        "no-unsafe-any": false
    }
}
